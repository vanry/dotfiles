set nocompatible

syntax on
set number

set showcmd
set showmode

set hlsearch
set incsearch
set ignorecase
set smartcase

set cindent
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4 

let mapleader=";"
nmap Y y$
nmap <leader><Space> :nohlsearch<CR>
nmap <leader>p "0p
nmap <leader>P "+p
nmap <leader>dif ddda}
nmap <leader>daf ddda}dd
